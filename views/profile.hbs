<h1>Profile</h1>
<hr>
<div class="row">
  <div class="col-xs-12 col-md-6 col-lg-9">
    <img src="{{photo}}" class="img-fluid" alt="Responsive image">

  </div>
  <div class="col-xs-12 col-md-6 col-lg-3">
    <h3>My raffles:</h3>
    <div class="row">
      {{#each tickets}}
      <div class="col-12">
        <div class="card border-success " style="width: 100%; !important">
          <div class="card-header"><i class="fas fa-ticket-alt text-success"></i> {{raffle.product.name}}</div>
          <div class="card-body text-success">
            <a href="/raffle/{{raffle._id}}">raffle page</a>
            {{#if winner}}
            <span class="badge badge-success">Winner</span>
            {{/if}}
            {{#if raffle.finished}}
            <span class="badge badge-danger">Raffle ends</span>
            {{else}}
            <span class="badge badge-primary">In progress</span>
            {{/if}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>